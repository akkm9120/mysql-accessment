{{#extends "base"}}

{{#block "content"}}
<h1>Update Lecturer</h1>
<form method="POST">
    <div>
        <label>Full Name</label>
        <input type="text" name="full_name"  value=`{{L.full_name}}` class="form-control"/>
    </div>
    <div>
        <label>Gender</label>
        <input type="text" name="gender" value="{{L.gender}} "  class="form-control"/>
    </div>
    <div>
        <label>Email</label>
        <input type="text" name="email"  value="{{L.email}} " class="form-control"/>
    </div>
     <div>
        <label>Phone Number</label>
        <input type="text" name="phone_number" value="{{L.phone_number}}   "  class="form-control"/>
    </div>
    
     <div>
        <label>Department</label>
        <input type="text" name="department"  value="{{L.department}}" class="form-control"/>
    </div>
    
     <div>
        <label>Specialization</label>
        <input type="text" name="specialization" value="{{L.specialization}} "  class="form-control"/>
    </div>
     <div>
        <label>Years of Experience</label>
        <input type="number" name="years_of_experience"  value="{{L.years_of_experience}}" class="form-control"/>
    </div>
    
    
    <input type="submit" value="Update" class="mt-3 btn btn-primary"/>
    <a href="/lecturer" class="btn btn-success mt-3">Cancel</a>

</form>


{{/block}}

{{/extends}}